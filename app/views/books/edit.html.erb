<%=form_with model:@books do |f| %>

<label for="inputName">title</label>
<%=f.text_field:title,autofocus:true,id:"title",placeholder:"title"%>

<label for="inputBody">opinion</label>
<%=f.text_area:body,autofocus:true,id:"body",placeholder:"opinion"%>

<%= f.submit "Update Book" %>
<%=link_to"Show",book_path(@books.id)%>
<%=link_to"Back",books_path%>
<% end %>

