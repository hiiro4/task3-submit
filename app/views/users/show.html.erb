
<div class="container">
    <div class="row">
<%= render"books/list" %>
<div class="col-md-8 offset-md-1">

<div>
    <h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>title</th>
      <th>opinion</th>
      <th></th>
    </tr>
  </thead>
  <%@books.each do |book| %>
    <%if book.user_id==@book_user.id%>
  <tbody>
     <tr>
          <td><%=link_to user_path(book.user_id) do %><%=image_tag book.user.get_profile_image(100,100) %></td><%end%>
         <td><%=link_to book_path(book.id) do %><%=book.title %></td><%end%>
         <td><%=book.body %></td>
     </tr>
   </tbody>
   <%end%>
<%end%>
  </table>

</div>
</div>
 </div>
  </div>

